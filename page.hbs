{{!< default}}

<div class="uk-container">
    <article class="uk-article {{post_class}}" uk-scrollspy="target: > p; cls:uk-animation-fade; delay: 500">
        {{#post}}
        {{#has tag="#show-feature-img"}}
        {{> feature_image}}
        {{/has}}
        <h1 class="uk-article-title uk-heading-line uk-text-center">{{title}}</h1>
        <p class="uk-article-meta uk-text-center">Written by <a href="#">{{authors}}</a> on
            {{date created_at format="MMMM DD, YYYY"}}.
            updated at {{date updated_at format="MMMM DD, YYYY"}}
        </p>
        <div class="uk-grid-match">
            <div class="uk-width-expand@m">
                <div class="uk-width-expand@m">
                    <div id="my-post" class="uk-text-break">
                        {{content}}
                    </div>
                    {{#has tag="#show-cc-license"}}
                    <hr>
                    <p class="uk-text-center">
                        <a rel="license" href="http://creativecommons.org/licenses/by-nc-nd/3.0/"><img
                                alt="Creative Commons License" style="border-width:0"
                                src="https://i.creativecommons.org/l/by-nc-nd/3.0/80x15.png" /></a><br />This work is
                        licensed under a <a rel="license"
                            href="http://creativecommons.org/licenses/by-nc-nd/3.0/">Creative Commons
                            Attribution-NonCommercial-NoDerivs 3.0 Unported License</a>.
                    </p>
                    {{/has}}
                    <hr class="uk-divider-icon">
                    {{> comment}}
                </div>
                {{#has tag="#show-sider-bar"}}
                {{> sider-bar}}
                {{/has}}
            </div>
        </div>
        {{/post}}
    </article>
</div>
