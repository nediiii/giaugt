{{!< default}}
<div class="uk-container">

    <div class="uk-padding uk-animation-toggle uk-flex uk-flex-center" style="padding-bottom:10px">
        {{#if @site.logo}}
        <a href="{{@site.url}}">
            <img class="uk-border-circle  uk-animation-shake" style="width:100%;height:100%"
                src="{{img_url @site.logo size="xs"}}" alt="{{@site.title}}" />
        </a>
        {{else}}
        <a href="{{@site.url}}">{{@site.title}}</a>
        {{/if}}
    </div>

    <div>
        <section class="uk-text-center">
            <h1>{{code}}</h1>
            <p>{{message}}</p>
            <a href="{{@site.url}}">Go to the front page â†’</a>
        </section>
        {{#if errorDetails}}
        <section>
            <h3>Theme errors</h3>
            <ul>
                {{#each errorDetails}}
                <li>
                    <em>{{{rule}}}</em>
                    {{#each failures}}
                    <p><span>Ref: {{ref}}</span></p>
                    <p><span>Message: {{message}}</span></p>
                    {{/each}}
                </li>
                {{/each}}
            </ul>
        </section>
        {{/if}}
    </div>

</div>
